  <project xmlns="http://maven.apache.org/POM/4.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                               http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.geotoolkit.project</groupId>
    <artifactId>build</artifactId>
    <version>SNAPSHOT</version>
  </parent>


  <!-- =========================================================== -->
  <!--     Module Description                                      -->
  <!-- =========================================================== -->
  <groupId>org.geotoolkit.project</groupId>
  <artifactId>maven</artifactId>
  <packaging>pom</packaging>
  <name>Maven plugins</name>
  <description>
    Maven plugins specific to the Geotk project.
  </description>


  <!-- =========================================================== -->
  <!--     Developers and Contributors                             -->
  <!-- =========================================================== -->
  <developers>
    <developer>
      <name>Martin Desruisseaux</name>
      <id>desruisseaux</id>
      <email>desruisseaux@users.sourceforge.net</email>
      <organization>Geomatys</organization>
      <organizationUrl>http://www.geomatys.fr/</organizationUrl>
      <timezone>+1</timezone>
      <roles>
        <role>Administrator</role>
      </roles>
    </developer>
  </developers>


  <!-- =========================================================== -->
  <!--     Dependency Management                                   -->
  <!-- TODO: avoid hard-coded version when the following is fixed: -->
  <!-- http://jira.codehaus.org/browse/MNG-4112                    -->
  <!-- =========================================================== -->
  <dependencies>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-plugin-api</artifactId>
      <version>2.0.9</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-project</artifactId>
      <version>2.0.9</version>
    </dependency>
  </dependencies>


  <!-- =========================================================== -->
  <!--     Modules included in the build                           -->
  <!--                                                             -->
  <!--     Those modules will be excluded when generating the      -->
  <!--     web site because aggregated javadoc cause failures      -->
  <!--     during Maven plugins build.                             -->
  <!--                                                             -->
  <!--     See http://jira.codehaus.org/browse/MJAVADOC-145        -->
  <!--                                                             -->
  <!--     For testing if the bug has been fixed:                  -->
  <!--                                                             -->
  <!--     mvn site -Pno-site                                      -->
  <!--                                                             -->
  <!--     Check that the list of modules includes those below.    -->
  <!-- =========================================================== -->
  <profiles>
    <profile>
      <id>no-site</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <modules>
        <module>geotk-resource-compiler</module>
        <module>geotk-jar-collector</module>
        <module>geotk-unopkg</module>
        <module>geotk-javadoc</module>
        <module>geotk-site</module>
      </modules>
    </profile>
  </profiles>


</project>
